<div>
  <div>
    <h1>
      <%= @the_reading_plan.title %>
    </h1>

    <div>
      <div>
        <a href="/reading_plans">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_reading_plan/<%= @the_reading_plan.id %>">
          Delete reading plan
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @the_reading_plan.title %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @the_reading_plan.description %>
      </dd>

      <dt>
        Total Books
      </dt>
      <dd>
        <%= @the_reading_plan.books.length %>
      </dd>

      <dt>
        Sequence
      </dt>
      <dd>
        <ol>
          <% @the_reading_plan.books.each do |plan_content| %>
            <li><%= Book.find(plan_content.book_id).title %></li>
          <% end %>
        </ol>
      </dd>
    </dl>
  </div>
</div>


<hr>

<div>
  <div>
    <h2>
      Edit reading plan
    </h2>

    <form action="/modify_reading_plan/<%= @the_reading_plan.id %>"  method="post" >
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title" value="<%= @the_reading_plan.title %>">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description"><%= @the_reading_plan.description %></textarea>
      </div>

      <button>
        Update reading plan
      </button>
    </form>
  </div>
</div>

<hr>
