<div>
  <div>
    <h1>
      List of all reading plan contents
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new reading plan content
    </h2>

    <form action="/insert_reading_plan_content" method="post">
      <div>
        <label for="plan_id_box">
          Plan
        </label>

        <input type="text" id="plan_id_box" name="query_plan_id">
      </div>

      <div>
        <label for="book_id_box">
          Book
        </label>

        <input type="text" id="book_id_box" name="query_book_id">
      </div>

      <div>
        <label for="sequence_box">
          Sequence
        </label>

        <input type="text" id="sequence_box" name="query_sequence">
      </div>

      <button>
        Create reading plan content
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Plan
        </th>

        <th>
          Book
        </th>

        <th>
          Sequence
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_reading_plan_contents.each do |a_reading_plan_content| %>
      <tr>
        <td>
          <%= a_reading_plan_content.id %>
        </td>

        <td>
          <%= a_reading_plan_content.plan_id %>
        </td>

        <td>
          <%= a_reading_plan_content.book_id %>
        </td>

        <td>
          <%= a_reading_plan_content.sequence %>
        </td>

        <td>
          <%= time_ago_in_words(a_reading_plan_content.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_reading_plan_content.updated_at) %> ago
        </td>

        <td>
          <a href="/reading_plan_contents/<%= a_reading_plan_content.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
