<div>
  <div>
    <h1>
      List of all chapters
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new chapter
    </h2>

    <form action="/insert_chapter" method="post">
      <div>
        <label for="book_id_box">
          Book
        </label>

        <input type="text" id="book_id_box" name="query_book_id">
      </div>

      <div>
        <label for="number_box">
          Number
        </label>

        <input type="text" id="number_box" name="query_number">
      </div>

      <div>
        <label for="content_box">
          Content
        </label>

        <textarea id="content_box" name="query_content" rows="3"></textarea>
      </div>

      <button>
        Create chapter
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Book
        </th>

        <th>
          Number
        </th>

        <th>
          Content
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_chapters.each do |a_chapter| %>
      <tr>
        <td>
          <%= a_chapter.id %>
        </td>

        <td>
          <%= a_chapter.book_id %>
        </td>

        <td>
          <%= a_chapter.number %>
        </td>

        <td>
          <%= a_chapter.content %>
        </td>

        <td>
          <%= time_ago_in_words(a_chapter.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_chapter.updated_at) %> ago
        </td>

        <td>
          <a href="/chapters/<%= a_chapter.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
